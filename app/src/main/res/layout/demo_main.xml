<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".DemoMain">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" />

    <EditText
        android:id="@+id/etPrintCmd"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/textHint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="@string/text_hint" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etPrintInput"
            android:layout_alignStart="@+id/etPrintInput"
            android:layout_below="@+id/textHint"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="PRINT"
            android:layout_gravity="center" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LF"
            android:id="@+id/cbLf"
            android:layout_gravity="center"
            android:checked="true" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbAscii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnPrint"
                android:layout_alignLeft="@+id/button2"
                android:layout_alignStart="@+id/button2"
                android:text="Ascii"
                android:checked="true"
                android:layout_gravity="left" />

            <RadioButton
                android:id="@+id/rbHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button"
                android:layout_toEndOf="@+id/button2"
                android:layout_toRightOf="@+id/button2"
                android:text="Hex"
                android:layout_gravity="left" />
        </RadioGroup>
    </TableRow>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:id="@+id/radioGroup">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select Printer: "/>

        <RadioButton
            android:id="@+id/rbTwoInch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="2 Inch"
            android:checked="true"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rbThreeInch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="3 Inch"
            android:layout_weight="1" />
    </RadioGroup>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnLf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:text="LF"
        android:layout_margin="2dp"/>
        <Button
            android:id="@+id/btnCrLf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:text="CR/LF"
            android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btnPrintReceipt"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Print Receipt"
        android:layout_margin="2dp"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <Button
        android:layout_margin="2dp"
        android:id="@+id/btnPrintConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       android:text="Open Printer Service / Configuration" />
    </TableRow>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/lvLog"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </ListView>

    <TextView
        android:id="@+id/tvLoopedLabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:drawableLeft="@mipmap/looped_labs"
        android:gravity="center"
        android:text="Looped Labs"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0032ff" />

</LinearLayout>
